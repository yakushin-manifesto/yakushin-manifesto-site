---
import AstroBarChart from "astro-barchart";

const data = [
  { key: "French", value: 10 },
  { key: "English", value: 9 },
  { key: "Italian", value: 8 },
  { key: "German", value: 7 },
  { key: "Spanish", value: 6 },
  { key: "Portuguese", value: 5 },
  { key: "Dutch", value: 4 },
  { key: "Russian", value: 3 },
  { key: "Swedish", value: 2 },
  { key: "Danish", value: 1 },
  { key: "Arabic", value: 10 },
  { key: "Norwegian", value: 9 },
  { key: "Hebrew", value: 8 },
  { key: "Greek", value: 7 },
  { key: "Polish", value: 6 },
  { key: "Japanese", value: 5 },
  { key: "Czech", value: 4 },
  { key: "Urdu", value: 3 },
  { key: "Romanian", value: 2 },
  { key: "Turkish", value: 1 },
  { key: "Bengali", value: 10 },
