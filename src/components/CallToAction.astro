---
interface Props {
  text: string;
  url: string;
}

const { text, url } = Astro.props;
---

<div class="call-to-action-wrapper">
  <a href={url} class="call-to-action-button">
    {text}
    <span class="material-icons-sharp">arrow_forward</span>
  </a>
</div>

<style>
  .call-to-action-wrapper {
    display: flex;
    justify-content: center;
    margin: 2em 0;
  }

  .call-to-action-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5em;
    padding: 0.75em 1.5em;
    background: var(--color-accent, #ff4500);
    color: var(--color-base, #ffffff);
    font-weight: 600;
    letter-spacing: 0.01em;
    border-radius: 100px;
    transition: background-color 0.3s ease;
  }

  .call-to-action-button:hover {
    background-color: color-mix(in srgb, var(--color-accent, #ff4500) 80%, black);
  }
</style>